<h1>Wikimedia Donations</h1>
<form action="/confirm" method="post">
    <label for="firstName">First Name</label>
    <input id="firstName" name="firstName" type="text" required><br>
    <label for="lastName">Last Name</label>
    <input id="lastName" name="lastName" type="text" required><br>
    <label for="streetAddress">Street Address</label>
    <input id="streetAddress" name="streetAddress" type="text" required><br>
    <label for="city">City</label>
    <input id="city" name="city" type="text" required><br>
    <label for="state">State/Region</label>
    <input id="state" name="state" type="text" required><br>
    <label for="country">Country:</label>
    <select name="country" id="country">
        {{#each countries}}
            <option value="{{this}}">{{this}}</option>
        {{/each}}
    </select> <br>
    <label for="postalCode">Postal Code</label>
    <input id="postalCode" name="postalCode" type="text" required><br>
    <label for="phoneNumber">Phone Number</label>
    <input id="phoneNumber" name="phoneNumber" type="text" required><br>
    <label for="email">E-mail</label>
    <input id="email" name="email" type="text" required><br>
    <label for="formOfContact">Preferred form of contact:</label>
    <select name="formOfContact" id="formOfContact">
        <option value="phone">Phone</option>
        <option value="email">Email</option>
    </select> <br>
    <label for="formOfPayment">Preferred form of payment:</label>
    <select name="formOfPayment" id="formOfPayment">
        <option value="USD">USD</option>
        <option value="EUR">Euro</option>
        <option value="BTC">Bitcoin</option>
    </select> <br>
    <label for="frequencyOfDonation">Frequency of Donation:</label>
    <select name="frequencyOfDonation" id="frequencyOfDonation">
        <option value="monthly">Monthly</option>
        <option value="yearly">Yearly</option>
        <option value="one-time">One-time</option>
    </select> <br>
    <label for="donationAmount">Amount of Donation:</label>
    <input type="number" min="1" step="any" name="donationAmount" id="donationAmount"> <br>
    <label for="comments">Comments:</label>
    <textarea name="comments" id="comments" cols="30" rows="10"></textarea> <br>
    <input type="submit" value="Review">
</form>
